<!-- container div -->
<div class="container">
  <br>
  <br>
  <center>
    <header id="showcase">
      <h1 class="purple-text text-accent-3 font-style light italic">Invaders Must Die!!!!!</h1>
    </header>
    <br>

    <div class="row" id="content">

      <div class="col s12 m6">
        <div id="gameCard" class="z-depth-5 card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="img/joystick.jpeg">
          </div>
          <div class="card-content color black">
            <span class="card-title activator cyan-text text-accent-2">Start Here
              <i class="material-icons right">stars</i>
            </span>
          </div>
          <div class="card-reveal color black white-text waves-ripple">
            <span class="color black card-title  purple-text text-accent-3">
              <strong>User Menu</strong>
              <i class="material-icons right">close</i>
            </span>
            <!-- TAP TARGET -->
            <div class="fixed-action-btn" style="bottom:45px;right:24px">
              <a id="menu" onclick="$('.tap-target').tapTarget('open')" class="waves-effect waves-light btn btn-floating btn-large cyan">
                <i class="material-icons">menu</i>
              </a>
            </div>
            <a onclick="$('.tap-target').tapTarget('open')">
              <button class="waves-effect waves-light btn cyan">View Instructions</button>
            </a>
            <br>OR
            <br>
            <a href="/game">
              <button class="color purple btn-large btn waves-effect waves-light orange pulse">Start New Game</button>
            </a>

          </div>
        </div>
      </div>
      <div class="col s12 m6">
        <div id="leaderboardCard" class="z-depth-5 card">
          <div class="card-image">
            <img src="img/card.jpg">
            <span class="card-title">View Leaderboard</span>
            <a class="btn-floating halfway-fab waves-effect waves-light waves-orange purple" href="/leaderboard">
              <i class="material-icons">view_list</i>
            </a>
          </div>
          <div class="card-content color black">
            <p class="flow-text teal-text text-accent-3">See How You Stack Up</p>
          </div>
        </div>
      </div>
    </div>
   
  </center>
  <!-- TAP TARGET CONTENT -->
  <center>
  <div class="tap-target purple" data-activates="menu">
    <div class="tap-target-content white-text" style="display: inline-block;">
      <h5>Instructions</h5>
      <br>
      <p class="white-text">The object of the game to is destroy the enemy invaders before they reach your ship</p>
      
      <p class="white-text">You will be able to shoot the attackers using the
        <kbd>SPACE</kbd> bar</p>
      
      <p class="white-text">Move side to side using the
        <i class="material-icons">arrow_back</i> and
        <i class="material-icons">arrow_forward</i> keys</p>
      
      <p class="white-text">Stay sharp and good luck. The fate of the Universe depends on you!</p>
    </div>
    <br>
    <br>
    <br>
    <br>
    <a href="/game">
      <button class="color teal btn-large btn waves-effect waves-light pulse">Start New Game</button>
    </a>
  </div>
  </center>

</div>